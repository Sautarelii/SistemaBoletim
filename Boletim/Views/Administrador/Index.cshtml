@model IEnumerable<Boletim.Administrador>

@{
    ViewBag.Title = "Index";
}
    <style>
        body {
            background-color: #4A6398;
            margin: 100px;
        }

        .um {
            width: 100%;
            color: #000;
            border: 4px solid #000;
            height: 1100px;
            background-color: white;
            border-radius: 25px;
            box-sizing: border-box;
        }

        h2 {
            color: black
        }
    </style>
    <div class="um">
        <h2>Administrador</h2>
        <br/>
       
        <p>
            @Html.ActionLink("Adicionar Administrador", "CreateAdmin", new {}, new { @class = "btn btn-success" })
        </p>
        <br/>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome_Administrador)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Usuario.Email)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome_Administrador)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "EditAdmin", new { id = item.Cod_Administrador },new {@class = "btn btn-success" }) |
                        @Html.ActionLink("Detalhar", "Details", new { id = item.Cod_Administrador }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Cod_Administrador }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>